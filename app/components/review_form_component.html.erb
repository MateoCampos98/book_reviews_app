<%= form_with(model: [@book, @review], data: { turbo_frame: dom_id(@book, :review_form) }) do |f| %>
  <div class="field">
    <%= f.label :rating, "Calificación" %>
    <%= f.select :rating, options_for_select(1..5), {}, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :content, "Comentario" %>
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit "Guardar reseña" %>
  </div>
<% end %>